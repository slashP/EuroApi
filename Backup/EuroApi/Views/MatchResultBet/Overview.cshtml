@model List<List<EuroApi.Models.Team>>

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="groupTables">
<a href="/MatchResultBet/Index?group=a">Back to betting</a>
</div>
<div class="groupTables">
    @foreach (var group in Model)
    {
        @Html.Partial("_Group", group)
    }
            
</div>
@{
    var quarterFinals = (IEnumerable<EuroApi.Models.Match>) ViewBag.QuarterFinals;
}

<div style="margin-left: 200px; margin-top: 40px;">
    <div style="font-weight: bold; font-size: 1.5em; margin-bottom: 10px;">Quarterfinals</div>
    @foreach(var match in quarterFinals)
    {
        <div class="userBetMatch">
            <div class="teamsInMatch">
                <div><img src="/Content/flags/@(match.HomeTeam.Name)-flag.gif" style='height: 14px;' alt='flag' />
                    @match.HomeTeam.Name</div> - 
                <div><img src="/Content/flags/@(match.AwayTeam.Name)-flag.gif" style='height: 14px;' alt='flag' />                 
                    @match.AwayTeam.Name</div>
            </div>
        </div>
    }
</div>