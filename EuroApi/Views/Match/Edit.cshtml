@model EuroApi.Models.Match

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Match</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.HomeTeamId, "HomeTeam")
        </div>
        <div class="editor-field">
            @Html.DropDownList("HomeTeamId", String.Empty)
            @Html.ValidationMessageFor(model => model.HomeTeamId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GuestTeamId, "AwayTeam")
        </div>
        <div class="editor-field">
            @Html.DropDownList("AwayTeamId", String.Empty)
            @Html.ValidationMessageFor(model => model.GuestTeamId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HomeTeamGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HomeTeamGoals)
            @Html.ValidationMessageFor(model => model.HomeTeamGoals)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AwayTeamGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AwayTeamGoals)
            @Html.ValidationMessageFor(model => model.AwayTeamGoals)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
