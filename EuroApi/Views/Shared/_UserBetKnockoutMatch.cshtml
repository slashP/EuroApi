@using EuroApi.Models
@model KnockoutMatch

@{
    var userBets = (List<KnockoutMatchResultBet>)ViewBag.UsersResultBetsKnockout;
    var userBetHomeResult = 0;
    var userBetAwayResult = 0;
    var untouched = "untoched";
    if (userBets != null)
    {
        var userBet = userBets.Where(x => x.MatchId == Model.Id).ToList();
        if (userBet.Any())
        {
            userBetHomeResult = userBet.Select(x => x.HomeTeamGoals).FirstOrDefault();
            userBetAwayResult = userBet.Select(x => x.AwayTeamGoals).FirstOrDefault();
        }
        untouched = "";
    }
}

<div class="userBetMatch">
    <div class="teamsInMatch">
        <div><img src="/Content/flags/@(Model.HomeTeam.Name)-flag.gif" style='height: 14px;' alt='flag' />
            @Model.HomeTeam.Name
        </div>
        <div><img src="/Content/flags/@(Model.AwayTeam.Name)-flag.gif" style='height: 14px;' alt='flag' />                 
            @Model.AwayTeam.Name
        </div>
    </div>
    <input class="resultBetKnockout homeTeam @untouched" type="tel" matchId="@Model.Id" value="@userBetHomeResult"/>
    <input class="resultBetKnockout awayTeam @untouched" type="tel" matchId="@Model.Id" value="@userBetAwayResult" />
</div>